{
	"require": {
        "php": ">=5.5.0",
        "robloach/component-installer": "*",
        "mnsami/composer-custom-directory-installer": "1.1.*",
		"components/bootstrap": "3.3.7",
        "components/font-awesome": "4.6.3",
        "datatables/datatables": "1.10.12",
        "davidecesarano/gapi": "dev-master",
		"phpmailer/phpmailer": "dev-master",
        "firephp/firephp-core": "dev-master",
        "tecnickcom/tcpdf": "dev-master"
    },
	"autoload": {
		"psr-4": {
			"Controllers\\": "app/controllers/",
			"Core\\": "app/core/",
			"Helpers\\": "app/helpers/",
			"Middleware\\": "app/middleware/",
			"Models\\": "app/models/"
		}
	},
    "config": {
        "component-dir": "vendor/assets"
    },
    "extra": {
        "component": {
            "datatables/datatables": {
                "scripts": [
                    "media/js/*.js"
                ],
                "styles": [
                    "media/css/*.css"
                ],
                "files": [
                    "media/images/*.png"
                ]
            }
        },
        "installer-paths": {
            "./vendor/libs/{$name}": [
                "davidecesarano/gapi", 
                "phpmailer/phpmailer",
                "firephp/firephp-core",
                "tecnickcom/tcpdf"
            ]
        }
    },
    "minimum-stability": "dev"
}